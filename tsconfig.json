{
  "compilerOptions": {
    "removeComments": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "jsx": "react",
    "pretty": true,
    "sourceMap": true,
    "target": "es5",
    "outDir": "dist",
    "moduleResolution": "node",
    "lib": ["dom", "es2015"]
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "./components/**/*.tsx",
    "./index.ts",
    "./custom.d.ts"
  ]
}
