{
  "name": "graphcool-styles",
  "version": "0.1.43",
  "description": "Shared style resources between Graphcool projects",
  "main": "dist/build.js",
  "files": [
    "dist",
    "icons",
    "index.d.ts"
  ],
  "scripts": {
    "start": "webpack-dev-server --hot --inline --progress --history-api-fallback --host 0.0.0.0 --port 4500 --config webpack.exhibition.config.js",
    "test": "tslint {components,variables}/**/*.ts{,x}",
    "bump": "npm version patch --no-git-tag-version && git add package.json",
    "prepublish": "npm run build",
    "build-particles": "cat css/particles.css | postcss > dist/particles.css",
    "build": "tcm css -c -o dist && tsc -d --jsx react --lib dom,es2015 components/Icon/Icon.tsx variables/variables.ts --outDir dist && NODE_ENV=production webpack --config webpack.config.js; npm run build-particles"
  },
  "pre-commit": [
    "test",
    "bump"
  ],
  "devDependencies": {
    "@types/node": "^6.0.45",
    "@types/react": "0.14.40",
    "awesome-typescript-loader": "^2.2.4",
    "css-loader": "^0.25.0",
    "cssnano": "^3.7.7",
    "extract-text-webpack-plugin": "^2.0.0-beta.4",
    "postcss-cli": "^4.1.0",
    "postcss-import": "8.1.0",
    "postcss-inherit": "^4.0.1",
    "postcss-loader": "^0.13.0",
    "postcss-simple-vars": "^4.0.0",
    "pre-commit": "^1.1.3",
    "raw-loader": "^0.5.1",
    "react": "^15.4.0",
    "svgo-loader": "^1.1.0",
    "tslint": "^3.15.1",
    "tslint-config-standard": "^1.3.0",
    "tslint-loader": "^2.1.5",
    "typed-css-modules": "^0.1.13",
    "typescript": "^2.0.3",
    "webpack": "^2.1.0-beta.25"
  },
  "peerDependencies": {
    "react": "^0.15.0"
  },
  "dependencies": {
    "html-webpack-plugin": "^2.24.1",
    "interactive": "^0.1.9",
    "object-assign": "^4.1.0",
    "react-dom": "^15.3.2",
    "webpack-dev-server": "^1.16.2"
  }
}
